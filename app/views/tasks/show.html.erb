<h1><strong>My Tasks</strong></h1>

  <% @tasks.each do |task| %>
    <li><label><input type="checkbox">
      <%= link_to task.title, task_path(task) %>
      <%= button_to "delete", destroy_path(task),
      method: :delete %>
    </li></label>
  <% end %>

<%= link_to "+ Add a new task", tasks_new_path %>
